<div class="top">
  <div class="top-main">
    <div class="container d-flex align-items-center h-100">
      <div class="row col-lg-6">
        <div class="form-wrapper rounded shadow">
          <div class="form-area p-3">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
              <%= form_for :rooms_search ,url: search_rooms_path, method: :get do |form| %>
                <%= form.label "エリア" %>
                <%= form.text_field :area, value: "", class: "form-control mb-4", placeholder: "東京" %>
                <%= form.submit "探す", class: "form-control btn-primary mb-4"  %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="container">
        <div class="panel-area m-5">
            <h1 class="section-title">おすすめのエリア</h1>
            <div class="row">
                <div class="panel-item col-lg-3 col-6">
                    <span>東京</span>
                    <%= link_to image_tag("img_tokyo.jpg", class: "place-img rounded w-100 shadow", alt: "東京の画像"), search_rooms_path %>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>大阪</span>
                    <%= link_to image_tag("img_osaka.jpg", class: "place-img rounded w-100 shadow", alt: "大阪の画像"), search_rooms_path %>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>京都</span>
                    <%= link_to image_tag("img_kyoto.jpg", class: "place-img rounded w-100 shadow", alt: "京都の画像"), search_rooms_path %>
                </div>
                <div class="panel-item col-lg-3 col-6">
                    <span>札幌</span>
                    <%= link_to image_tag("img_sapporo.jpg", class: "place-img rounded w-100 shadow", alt: "札幌の画像"), search_rooms_path %>
                </div>
            </div>
        </div>
    </div>
</div>
