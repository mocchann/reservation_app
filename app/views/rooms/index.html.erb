<div class="container-fluid px-5 py-4">
  <div class="notice"><%= notice %></div>
  <h4 class="pb-4">登録済みルーム一覧</h4>
  <% if @rooms.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ルーム画像</th>
          <th scope="col">ルーム名</th>
          <th scope="col">ルーム紹介</th>
          <th scope="col">料金</th>
          <th scope="col">作成日</th>
          <th scope="col">削除</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr class="border-bottom">
            <td>
              <% if room.room_img.attached? %>
                <%= link_to image_tag(room.room_img, class: "w-100 h100", style: "max-width: 240px; max-height: 140px;"), room %>
              <% else %>
                <%= link_to image_tag("room_img.jpg", class: "w-100 h100", style: "max-width: 240px; max-height: 140px;"), room %>
              <% end %>
            </td>
            <td><%= link_to room.name, room %></td>
            <td><%= room.description %></td>
            <td><%= "¥#{room.price}" %></td>
            <td><%= room.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to 'ルーム登録を削除する', room, method: :delete, data: { confirm: '削除しますか?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>登録している部屋はありません</p>
  <% end %>
</div>
