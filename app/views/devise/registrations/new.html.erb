<div class="container user-resistration-wrapper">
  <div class="resistration-wrapper col-md-6 offset-md-3 col-sm-12 text-center shadow rounded">
    <p class="my-4">新しいアカウントを作成</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field form-group form-row">
        <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", class: "form-control col-10 px-2" %>
      </div>
      <div class="field form-group form-row">
        <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control col-10 px-2" %>
      </div>
      <div class="field form-group form-row">
        <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
        <%= f.password_field :password, placeholder: "パスワード", class: "form-control col-10 px-2" %>
      </div>
      <div class="field form-group form-row">
        <div class="col-2 required-b pt-2"><span class="badge  badge-danger p-1">必須</span></div>
        <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "form-control col-10 px-2" %>
      </div>
      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
