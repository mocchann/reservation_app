<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc border-right border-right d-lg-block d-none">
      <ul>
        <li class="active"><%= link_to "アカウント", users_account_path %></li>
        <li class=""><%= link_to "プロフィール", users_profile_path %></li>
      </ul>
    </div>
    <div class="d-lg-none user-nav user-nav-mobile form-inline">
      <ul>
        <li class="active"><%= link_to "アカウント", users_account_path %></li>
        <li class=""><%= link_to "プロフィール", users_profile_path %></li>
      </ul>
    </div>
    <div class="col-lg-10 col-md-10">
      <div class="m-5 border">
        <div class="my-4 border-bottom">
          <h5>アカウント</h5>
        </div>
        <div class="form-group form-row p-3 mx-2 border-bottom">
          <div class="row">
            <label class="col-md-3" for="email">メールアドレス</label>
            <div class="col-md-9 px-2 mb-4"><%= @user.email %></div>
          </div>
        </div>
        <div class="form-group form-row p-3 mx-2 border-bottom">
          <div class="row">
            <label class="col-md-3" for="password">パスワード</label>
            <div class="col-md-9 px-2 mb-4"><%= @user.password %></div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <%= link_to "編集", edit_user_registration_path, class: "col-md-2 btn btn-primary mx-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>